  <body class="index-body">
    <%- include('../partials/_navbar.ejs') %>
    <div class="hero-text">
      <h1>Pair Your Wine with Your Board</h1>
    </div>
    <section class="hero">
      <ul>
        <% wines.forEach((wine)=>{ %> 
          <li><a class="authlinks" href="/users/<%= user._id %>/vinos/<%= wine._id %>"> <%= wine.name %> <%= wine.year %></a> 
            <%= wine.winery %>, <%= wine.category %></li>
            <% }) %>
          </ul>
        </section>
      
      </body>
